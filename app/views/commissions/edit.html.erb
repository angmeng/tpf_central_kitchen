<h1>Editing commission</h1>

<%= form_for(@commission) do |f| %>
  <% render "/shared/error_messages", :target => @commission %>
  <p>
    <%= f.label :salesman_id %><br />
    <%= f.text_field :salesman_id %>
  </p>
  <p>
    <%= f.label :product_id %><br />
    <%= f.text_field :product_id %>
  </p>
  <p>
    <%= f.label :percentage %><br />
    <%= f.text_field :percentage %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @commission %> |
<%= link_to 'Back', commissions_path %>