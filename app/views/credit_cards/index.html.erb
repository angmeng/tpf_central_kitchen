<% @page_title =  "Credit Cards" %>

<table>
  <tr>
    <th>Card Number</th>
    <th>Card Bank</th>
    <th>Reference</th>
    <th>Card Type</th>
    <th>Card Category</th>
    <th>Owner Name</th>
    <th>Clear</th>
  </tr>
  <% for credit_card in @credit_cards %>
    <tr>
      <td><%=h credit_card.card_number %></td>
      <td><%=h credit_card.card_bank_id %></td>
      <td><%=h credit_card.reference_id %></td>
      <td><%=h credit_card.card_type_id %></td>
      <td><%=h credit_card.card_category_id %></td>
      <td><%=h credit_card.owner_name %></td>
      <td><%=h credit_card.clear %></td>
      <td><%= link_to "Show", credit_card %></td>
      <td><%= link_to "Edit", edit_credit_card_path(credit_card) %></td>
      <td><%= link_to "Destroy", credit_card, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Credit Card", new_credit_card_path %></p>
