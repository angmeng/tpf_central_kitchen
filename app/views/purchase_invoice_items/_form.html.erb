<% form_for @purchase_invoice_item do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :purchase_invoice_id %><br />
    <%= f.text_field :purchase_invoice_id %>
  </p>
  <p>
    <%= f.label :product_id %><br />
    <%= f.text_field :product_id %>
  </p>
  <p>
    <%= f.label :quantity %><br />
    <%= f.text_field :quantity %>
  </p>
  <p>
    <%= f.label :unit_price %><br />
    <%= f.text_field :unit_price %>
  </p>
  <p>
    <%= f.label :remark %><br />
    <%= f.text_area :remark %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
