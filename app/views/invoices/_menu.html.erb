<p>
  <% link_to image_tag("home.png", :title => "View All Invoices"), invoices_path %>
  <%= link_to image_tag("edit.png", :title => "Edit"), edit_invoice_path(@invoice) %> 
  | <%= link_to(image_tag("print.png", :title => "Print"), preview_invoice_path(@invoice), { :target => "_blank" }) %>  
  <% unless @invoice.settled? %> 

   | <%= link_to image_tag("settle.png", :size => "28x28", :title => "Mark this Invoice as Completed"), complete_invoice_path(@invoice), :confirm => 'Are you sure you want to mark this Invoice as Completed ?' %>
  <% end %>
  <% link_to (t "links.destroy"), @invoice, :confirm => 'Are you sure?', :method => :delete %> 
   
  <% link_to (t "links.new"), new_invoice_path %>

   
   
  <% if @invoice.outlet_purchase_order %>
       | <%= link_to image_tag("back.png",:title => "Back to Outlet Purchase order"), @invoice.outlet_purchase_order %>
  <% end %>
</p>