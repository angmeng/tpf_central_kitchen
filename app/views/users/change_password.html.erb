<% title (t "titles.change_password") %>


<%= form_tag update_password_user_path(@user) do  %>
   <% render "/shared/error_messages", :target => @user %>
  <p>
    <%=t 'user.password' %> <br />
    <%= password_field "user", :password %>
  </p>
  <p>
    <%=t 'user.confirm_password' %><br />
    <%= password_field "user", :password_confirmation %>
  </p>
  <p><%= submit_tag(t "links.update") %></p>
<% end %>

<p>
  <%= link_to (t "links.back"), users_path %>
</p>
