<% @page_title =  (t "titles.expense") %>
<br>
<p><%= link_to image_tag("new.png", :title => "New expense"), new_expense_path %></p>
<br>
<table class="list">
  <thead>
  <tr>
    <th><%=t "expenses.expense_date" %></th>
    <th><%=t "expenses.title" %> </th>
    <th><%=t "common.description" %> </th>
    <th><%=t "expenses.amount" %> </th>
	<th><%=t "common.action" %> </th>
  </tr>
  </thead>
   <tbody>
  <% for expense in @expenses %>
    <tr class="<%= cycle("list0", "list1") %>">
      <td align="center"><%=h expense.expense_date %></td>
      <td><%=h expense.title %></td>
      <td><%=h expense.description %></td>
      <td align="center">RM <%=h number_with_precision(expense.amount, :precision => 2) %></td>
      <td align="center"><%= link_to image_tag("show.png", :title => "show"), expense %>
      <%= link_to image_tag("edit.png", :title => "Edit"), edit_expense_path(expense) %>
      <%= link_to image_tag("delete.png", :title => "Delete"), expense, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
    </tbody>
</table>




