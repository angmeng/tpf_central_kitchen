<%= form_for @card_category do |f| %>
  <% render "/shared/error_messages", :target => @card_category %>  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :priority %><br />
    <%= f.text_field :priority %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
